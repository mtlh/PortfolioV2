---
import favicon16 from '~/assets/favicons/favicon-16x16.png';
import favicon32 from '~/assets/favicons/favicon-32x32.png';
import appleTouchIcon from '~/assets/favicons/apple-touch-icon.png';
import android192 from '~/assets/favicons/android-chrome-192x192.png';
import android512 from '~/assets/favicons/android-chrome-512x512.png';
import siteManifest from '~/assets/favicons/site.webmanifest';
---

<link rel="apple-touch-icon" sizes="180x180" href={appleTouchIcon.src} />
<link rel="icon" type="image/png" sizes="32x32" href={favicon32.src} />
<link rel="icon" type="image/png" sizes="16x16" href={favicon16.src} />
<link rel="icon" type="image/png" sizes="192x192" href={android192.src} />
<link rel="icon" type="image/png" sizes="512x512" href={android512.src} />
<link rel="mask-icon" href={favicon32.src} color="#5bbad5" />
<link rel="manifest" href={siteManifest} />
